{
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/node_modules/**", "**/lib/**"]
}
